<Page x:Class="MyFinances.View.Pages.ExpensesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyFinances.View.Pages"
      xmlns:uc="clr-namespace:MyFinances.View.UserControls.ExpensesPageButtons"
      mc:Ignorable="d" 
      Height="550" Width="750"
      Title="ExpensesPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" 
                    Margin="0 0 0 200"
                    Orientation="Horizontal">
            <uc:HouseExpensesButton/>
            <uc:FoodExpensesButton/>
            <uc:TransportExpensesButton/>
            <uc:RestExpensesButton/>
            <uc:ShoppingExpensesButton/>
            <uc:PhoneExpensesButton/>
        </StackPanel>
    </Grid>
</Page>
