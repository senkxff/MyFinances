<Window x:Class="MyFinances.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyFinances.View"
        mc:Ignorable="d"
        Height="550" Width="1000" 
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" Background="White"
        xmlns:uc="clr-namespace:MyFinances.UserControls"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
>

    <WindowChrome.WindowChrome>
        <WindowChrome CornerRadius="20" CaptionHeight="5"/>
    </WindowChrome.WindowChrome>
    
    <Grid>
        
        <!-- Сетка --> 
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <!-- Стандартная панель -->
        <StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" Orientation="Horizontal" Width="auto" Margin="0 0 10 0">
            <uc:CollapseButton Margin="0 0 5 0"/>
            <uc:ExpandButton Margin=" 0 0 5 0"/>
            <uc:CloseButton Margin="0 0 5 0"/>
        </StackPanel>

        <!-- Панель управления -->
        <Rectangle Grid.Column="0" Grid.RowSpan="2" Fill="#283618"/>
        
    </Grid>
</Window>
