<Window x:Class="MyFinances.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyFinances.View"
        mc:Ignorable="d"
        Height="550" Width="1000" 
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" Background="White"
        xmlns:uc="clr-namespace:MyFinances.UserControls"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <WindowChrome.WindowChrome>
        <WindowChrome CornerRadius="20" 
                      CaptionHeight="5"/>
    </WindowChrome.WindowChrome>
    
    <Grid>
                <!-- Сетка --> 
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="7.5*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Верхняя панель -->
        <StackPanel Grid.Row="0" 
                    Grid.Column="1" 
                    HorizontalAlignment="Right" 
                    Orientation="Horizontal"  
                    Margin="0 0 10 0">

            <uc:CollapseButton Margin="0 0 5 0"/>
            <uc:ExpandButton Margin=" 0 0 5 0"/>
            <uc:CloseButton Margin="0 0 5 0"/>

        </StackPanel>

        <uc:LeftRowButton Grid.Column="0" Grid.Row="0"
               HorizontalAlignment="Left"
               Margin="15 0 0 0"
               MouseLeftButtonDown="LeftRowButton_MouseLeftButtonDown"
               Visibility="Visible"
               x:Name="LeftRowButton"/>
        <uc:RightRowButton
            Grid.Column="0" Grid.Row="0"
               HorizontalAlignment="Left"
               Margin="15 0 0 0"
               MouseLeftButtonDown="RightRowButton_MouseLeftButtonDown"
               Visibility="Hidden"
            x:Name="RightRowButton"/>
        <!-- -->

        <!-- Боковая панель -->
        <Rectangle Grid.Column="0" Grid.RowSpan="2" 
                   Fill="#1c1c1c" Panel.ZIndex="-1" x:Name="LeftPannel"
                   HorizontalAlignment="Left"
                   Width="250"/>

        <StackPanel Grid.Column="0" Grid.Row="1"
                    Margin="0 30 0 0">
            <uc:IncomeButton  HorizontalAlignment="Left" MouseLeftButtonDown="IncomeButton_MouseLeftButtonDown" />
            <uc:ExpensesButton HorizontalAlignment="Left" 
                               Margin="0 10 0 0" MouseLeftButtonDown="ExpensesButton_MouseLeftButtonDown"/>
            <uc:WalletsButton HorizontalAlignment="Left"
                              Margin="10 20 0 0" MouseLeftButtonDown="WalletsButton_MouseLeftButtonDown"/>
            <uc:AnaliticsButton HorizontalAlignment="Left"
                                Margin="10 10 0 0" MouseLeftButtonDown="AnaliticsButton_MouseLeftButtonDown"/>
            <uc:StorybookButton HorizontalAlignment="Left"
                                Margin="10 10 0 0" MouseLeftButtonDown="StorybookButton_MouseLeftButtonDown"/>
        </StackPanel>
            <uc:SettingsButton Grid.Row="1"
                               HorizontalAlignment="Left"
                               Margin="10 0 0 0"
                               VerticalAlignment="Bottom"
                               MouseLeftButtonDown="SettingsButton_MouseLeftButtonDown"/>
        <!-- -->

        <!-- Рабочая панель -->
        <Frame x:Name="Frame" Grid.Column="1" Grid.Row="1" NavigationUIVisibility="Hidden"/>
        <!-- -->
        
    </Grid>
</Window>
