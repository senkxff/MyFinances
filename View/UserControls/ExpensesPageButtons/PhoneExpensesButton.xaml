<UserControl x:Class="MyFinances.View.UserControls.ExpensesPageButtons.PhoneExpensesButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyFinances.View.UserControls.ExpensesPageButtons"
             mc:Ignorable="d" 
                         Height="100" Width="80">

    <UserControl.Resources>
        <FontFamily x:Key="Comic">pack://application:,,,/View/Fonts/Comic.ttf#Comic Sans MS</FontFamily>
    </UserControl.Resources>

    <Grid Cursor="Hand">
        <Ellipse Fill="LightSeaGreen" 
            Width="60"
            Height="60"/>
        <TextBlock Text="Связь" 
           VerticalAlignment="Top" HorizontalAlignment="Center"
           Foreground="Black" 
           FontFamily="Comic Sans MS"
           FontSize="15"
           Margin="0 0 0 50"/>
        <Image Source="/View/Images/ExpensesPageButtonsPhoto/PhoneExpensesButtonPhoto.png" Margin="19,31,18,32" RenderTransformOrigin="0.464,0.487"/>
        <TextBlock Text="0" 
          VerticalAlignment="Bottom" HorizontalAlignment="Center"
          Foreground="Black" 
          FontFamily="Comic Sans MS"
          FontSize="15" FontWeight="Bold"/>
    </Grid>
</UserControl>
